---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, description, pubDate } = post.data;
const formattedDate = new Intl.DateTimeFormat("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
}).format(pubDate);
---

<a
  href={`/blog/${post.slug}`}
  class="block py-16 hover:opacity-70 transition-opacity"
>
  <h2 class="font-sans text-3xl font-semibold mb-4 text-[#1a1a1a]">
    {title}
  </h2>
  {
    description && (
      <p class="font-serif text-xl text-[#666] mb-4 leading-relaxed font-normal">
        {description}
      </p>
    )
  }
  <div class="font-sans text-sm text-[#999] font-normal">
    <time>{formattedDate}</time>
  </div>
</a>
