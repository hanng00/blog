---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="About" description="About me and this blog">
  <Header />
  <main class="max-w-content mx-auto py-16 px-6">
    <article>
      <header class="mb-24">
        <h1 class="font-sans text-[42px] font-semibold mb-6 leading-[1.2] tracking-[-0.02em] text-[#1a1a1a]">About</h1>
      </header>
      <div class="prose prose-lg max-w-none">
        <p>
          Thoughts on my work, projects, and various topics I'm exploring.
        </p>
        <p>
          Feel free to reach out or connect with me through the links below.
        </p>
      </div>
    </article>
  </main>
  <Footer />
</BaseLayout>

